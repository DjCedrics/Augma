<resources>

    <!-- Following style declarations constitute the default theme of Augma -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Theme Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>

        <!-- Default Font types -->
        <item name="android:textViewStyle">@style/DefaultTextViewStyle</item>
        <item name="android:editTextStyle">@style/DefaultEditTextStyle</item>
        <item name="android:buttonStyle">@style/DefaultButtonStyle</item>

        <!-- Enable content transition -->
        <item name="android:windowActivityTransitions">true</item>

    </style>
    
    <style name="DefaultEditTextStyle">
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="DefaultTextViewStyle">
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="DefaultButtonStyle">
        <item name="android:fontFamily">@font/nunito</item>
    </style>

</resources>
