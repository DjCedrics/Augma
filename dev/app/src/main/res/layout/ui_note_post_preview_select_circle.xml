<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notePostPreviewSelectCircleRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.note.UINotePostPreviewSelectCircle">

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="25dp"
        android:id="@+id/notePostPreviewSelectCircleList"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.devlomi.hidely.hidelyviews.HidelyImageButton
        android:id="@+id/notePostPreviewSelectCircleConfirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/confirm_button_background"
        android:padding="8dp"
        android:src="@drawable/note_post_preview_proceed_button_icon"
        />


</RelativeLayout>